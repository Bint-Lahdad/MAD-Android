    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.navigation.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_reg"
        android:name="com.example.navigation.ui.gallery.GalleryFragment"
        android:label="registration"
        tools:layout="@layout/registration_form" />

    <fragment
        android:id="@+id/nav_view"
        android:name="com.example.navigation.ui.gallery.GalleryFragment"
        android:label="view_registration"
        tools:layout="@layout/view_registration" />

    <fragment
        android:id="@+id/nav_userinfo"
        android:name="com.example.navigation.ui.gallery.GalleryFragment"
        android:label="user_info"
